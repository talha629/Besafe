<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/univlever_safetyobservation"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context="com.PencilIT.besafe.SafetyObservationActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/SO1"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:background="@drawable/button_bg_2"
            android:drawableLeft="@drawable/hazard"
            android:padding="20dp"
            android:text="SAFE OBSERVATION"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <Button
            android:id="@+id/SO2"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/SO1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg_2"
            android:drawableLeft="@drawable/audit"
            android:padding="20dp"
            android:text="UNSAFE OBSERVATION"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SO3"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/SO2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg_2"
            android:drawableLeft="@drawable/nearmiss"
            android:padding="20dp"
            android:text="UNSAFE CONDITION"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SO4"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/SO3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg_2"
            android:drawableLeft="@drawable/safety"
            android:padding="20dp"
            android:text="NEAR MISS"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <Button
            android:id="@+id/draft"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/SO4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg_2"
            android:drawableLeft="@drawable/draft"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:text="SHOW DRAFT"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-5dp"
            android:background="@drawable/back" />

        <ImageButton
            android:id="@+id/user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-5dp"
            android:background="@drawable/usersettings" />


    </RelativeLayout>

</ScrollView>