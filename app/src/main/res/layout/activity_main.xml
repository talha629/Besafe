<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/univlever_login"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.PencilIT.besafe.MainActivity">


    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/userId"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:text="ENTER YOUR MOBILE NUMBER"
        android:textColor="#003B79"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/userId"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="id"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/password"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/buttonSubmit"
        android:layout_alignLeft="@+id/userId"
        android:background="@drawable/password"
        android:ems="10"
        android:hint="password"
        android:imeOptions="actionGo"
        android:inputType="textPassword"
        android:nextFocusForward="@+id/buttonSubmit"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/submit"
        android:ems="10"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:text="SUBMIT"
        android:textColor="@android:color/white" />

</RelativeLayout>
